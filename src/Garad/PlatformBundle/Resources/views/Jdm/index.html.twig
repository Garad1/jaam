{% extends 'GaradPlatformBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    {{ message }}
                    <i class="material-icons js-close-toast">close</i>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row" style="margin-top: 5px">
            <div class="col s12">
                <ul class="tabs tabs-fixed-width">
                    <li class="tab col s3"><a class="active" href="#test1">mot</a></li>
                    <li class="tab col s3"><a href="#test2">mot & type de relation</a></li>
                    <li class="tab col s3"><a href="#test3">existance mot pour type relation</a></li>
                </ul>
            </div>
            {# ================================== 1 ER FORMULAIRE ================================== #}
            <div id="test1" class="col s12">
